{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    
    {{#with main}}
        <main>
            <section>
                {{> title data ='My educationss' big = true}}
                {{#each educations}}
                    <ul>
                        <li>
                            {{name}}
                            {{#if isEnd}} {{date}} {{/if}}
                            {{#unless date includeZero=true}}(ще навчаюсь){{/unless}}
                        </li>
                    </ul>
                {{/each}}
            </section>
            
            <section>
                {{> title data ='My certificates'}}
                {{#each certificates}}
                    <ul>
                        <li>
                            {{name}} ({{id}})
                        </li>
                    </ul>
                {{/each}}
            </section>
        </main>
    {{/with}}
    
</div>

