

<main class="p-5">
   <section>
    <div class="row">
        {{#with navigation}}
        <nav class="nav">
            {{#each links}}
            <a class="nav-link" href={{href}}>{{text}}</a>
            {{/each}}
        </nav>
        {{/with}}
    </div>
    <hr>
   </section>
   <section>
    <div class="row">
        
        {{#each breadcrumb}}
        <nav style="breadcrumb" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href={{url}}>{{name}}/</a></li>
            </ol>
        </nav>
        {{/each}}
       
        <h1>{{header}}</h1>
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select my-5" aria-label="">
                <option selected="">{{placeholder}}</option>
                <option value={{value}}>{{text}}</option>
            </select>
        </div>
        {{/each}}
        {{#with filterBlock}}
        <div class="card col-4">
            <div class="card-body">
                {{#with sellers}}
                <h5>{{title}}</h5>
                {{#each list}} 
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}}</label>
                </div>
                 {{/each}}
                {{/with}}
                <hr>
                {{#with brands}}
                <h5>{{title}}</h5>
                <input type="text" placeholder={{input.placeholder}}>
                {{#each options}}
                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input">
                    <label class="form-check-label">{{value}}</label>
                </div>
                {{/each}}
                {{/with}}
                <hr>
                {{#with price}}
                <h5>{{title}}</h5>
                <input class="my-3" placeholder={{range.from}}>
                <br>
                <input class="my-3" placeholder={{range.to}}>
                <br>
                {{#with button}}<button class="btn btn-outline-secondary" href={{link}}>{{text}}</button>{{/with}}
                {{/with}}
                <hr>
                {{#each filterList}}
                <h5>{{title}}</h5>
                {{#each options}}
                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input">
                    <label class="form-check-label">{{value}}</label>
                
                </div>
                
                {{/each}}
                <hr>
                {{/each}}
                
            </div>
        </div>
        {{/with}}
        {{> catalogItem}}

        {{!-- {{#each goodsList}}
