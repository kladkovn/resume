    </div>
   </section>
   <section>
    {{#with service}}
    <div class="card bg-success">
        <div class="card-body text-center">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <button class="btn btn-primary" href={{link}}>{{text}}</button>
            {{/each}}
        </div>
    </div>
    {{/with}}
   </section>
   
   <section>
    <div class="row">
    {{#each footer}}
    <nav class="nav flex-column col-1">
        {{#each this}}
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href={{link}}>{{text}}</a>
            </li>
        </ul>
        {{/each}}
        </nav>
    {{/each}}
    </div>
   </section>
</main>






