{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        
    <main>
                
        <section>
            {{> title data = 'My work history' big = true}}
            <div>
                <ul>
                {{#each works}}
                <br>
                    <li>
                        <div>
                            <b>{{position}}</b>
                        </div>
                        <br> 
                        <div>{{duration.from}}
                             - 
                             {{#if duration.to}}
                                {{duration.to}}
                             {{else}}(досі працюю)
                             {{/if}}
                        </div>
                        <br>
                        <div>{{> link text = company.name href = company.url blank = true noLine = true }}
                            {{#unless url}}
                                <b>{{company.name}}</b>
                            {{/unless}}
                            
                        </div>
                        <br>
                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>
                        <br>
                        <div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    <div>
                                        {{name}}
                                    </div>
                                    <br>
                                    <div>{{> link text = name href = url blank = true noLine = true }}</div>
                                    <br>
                                    <div>
                                       <p>{{about}}</p> 
                                    </div>
                                    <br>
                                    <div>
                                        <em>Project stacks({{stackAmount}})</em>
                                    </div>
                                    <br>                                    <br>
                                    <div>
                                        <ul>
                                            {{#each stacks}}
                                            <li>
                                                <div>
                                                    {{name}}
                                                </div>
                                            </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <br>
                                    <div>
                                        <em>Project awards</em>
                                    </div>
                                    <br>
                                    <div>
                                        <ul>
                                            {{#each awards}}
                                            <li>
                                                <div>
                                                    {{name}}
                                                </div>
                                            </li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                                           
                    </li>
                {{/each}}
                </ul>
                
            </div>
            
            
        </section>
        {{!-- <section>
            {{> title data = 'My hobbies'}}
            <ol>
                {{#each hobbies}}
                    <li>
                        {{name}} 
                        {{#if isMain }} (favorite){{/if}}
                        
                    </li>
                {{/each}}
            </ol>
        </section> --}}
        
    </main>
    {{/with}}
    
</div>

