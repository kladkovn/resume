{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        
      
    <main>
        <section>
            {{> title data = 'All skills'}}
            <ul>
                {{#each skills}}
                    <li>
                        {{name}} 
                        
                        {{#if point includeZero=true}} ({{point}}) {{/if}}

                        {{#if isTop}} 'GODD' {{/if}}

                        {{#unless point includeZero=true}} 'no studies' {{/unless}}
                        {{#unless point}}
                            {{#if point includeZero=true}} 'studies' {{/if}}
                        {{/unless}}
                    </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data = 'My hobbies'}}
            <ol>
                {{#each hobbies}}
                    <li>
                        {{name}} 
                        {{#if isMain }} (favorite){{/if}}
                        
                    </li>
                {{/each}}
            </ol>
        </section>
        
    </main>
    {{/with}}
    
</div>

