

<main class="p-5">
   <section>
    <div class="row">
        {{#with navigation}}
        <nav class="nav">
            {{#each links}}
            <a class="nav-link" href={{href}}>{{text}}</a>
            {{/each}}
        </nav>
        {{/with}}
    </div>
    <hr>
   </section>
   <section>
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <h1>{{header}}</h1>
            {{#with rating}}<p>{{title}} {{value}}</p>{{/with}}
            {{#with actionBlock}}
            <div class="nav">
                {{#each tabs}}
                <ul class="nav nav-tabs">
                    {{#unless isActive}}<li class="nav-item">
                       <a class="nav-link" href="#">{{text}}</a> 
                    </li>{{/unless}}
                    {{!-- <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li> --}}
                    {{#if isActive}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                    </li>
                    {{/if}}
                </ul>
                {{/each}}
            </div>
            
            <hr class="mt-5 my-5">
            {{#with report}}
            <div class="card">
                <div class="card-body">
                    <p>{{title}}</p>
                    {{#with button}}
                    <button class="btn btn-secondary" href={{link}}>{{text}}</button>
                    {{/with}}
                </div>
            {{/with}}
            </div>
            <hr class="mt-5">
            {{/with}}
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card my-3">
                <div class="card-body">
                    <img src={{photo}} alt="photo">
                    <h5 class="m-3">{{name}}</h5>
                </div>
            </div>
            <div class="card my-3">
                <div class="card-body">
                    <h4>{{price}}</h4>
                    <p>{{inMarket}}</p>
                    {{#each buttons}}
                    {{#if isPrimary}}<button class="btn btn-primary" href={{link}}>{{text}}</button>{{/if}}
                    <br>
                    {{#if isSecondary}}<button class="btn btn-secondary" href={{link}}>{{text}}</button>{{/if}}
                    {{/each}}
                </div>
            </div>
            {{#with seller}}
            <div class="card">
                <div class="card-body">
                    <p>{{title}}:{{value}}</p>
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>
        <div class="col-12">
            {{#with feedbackBlock}}
            <div>
                <h3 class="my-5">{{title}}</h3>
                {{#each buttons}}
                {{#if isWarning}}<button class="btn btn-warning me-4" href={{link}}>{{text}}</button>{{/if}}
                {{#if isSuccess}}<button class="btn btn-success me-4" href={{link}}>{{text}}</button>{{/if}}
                {{#if isDanger}}<button class="btn btn-danger" href={{link}}>{{text}}</button>{{/if}}
                {{/each}}
            </div>
            {{/with}}
            <hr>
        </div>
    </div>
    {{/with}}
    
   </section>
