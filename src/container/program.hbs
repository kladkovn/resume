{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row p-5">
    <div class="card my-4">
        <div class="card-body text-center">
        {{#with program}}
        {{#with excursion}}
        <h2>{{name}}</h2>
        <p>{{location.city}}, 
        {{location.country}}</p>
        <date>{{date}}</date>
        </div>
    </div>
    <div class="card">
        <div class="card-body mt-4 text-center">
            {{#each program}}
            <strong>{{name}}</strong>
            <br>
            <p>{{type}}, duration ({{duration}})</p>
            <i>Details: </i>
            {{#with details.museum}}
            <b>{{name}}</b>
            {{#with location}}
            <address>{{address}}, {{city}}, {{country}} </address>
            {{/with}}
            {{#each exhibits}}
            <b>{{name}}, {{artist}}</b>
            <br>
            <q>{{description}}</q>
            <br>
            <em>audio_guide: {{audio_guide}}</em>
            <br>
            <br>
            {{/each}}
            {{/with}}
        
            {{#with details.venue}}
            <b>{{name}}</b>
            {{#with location}} 
            <address>{{address}}, {{city}}, {{country}}</address>
            {{/with}}
            <br>
            {{/with}}
            {{#each details.performers}}
            <b>{{name}}</b>
            <p>{{type}}</p> 
            {{/each}}
            
            {{#with details.guide}}
            <p>guide: {{firstname}}, language: {{language}}, rating: {{rating}}</p>
            <hr>
            {{/with}}
            {{/each}}
            {{/with}}
            {{/with}}
        </div>
    </div>
</div>

