
{{#each goodsBlock}}
<div class="card">
    <div class="card-body">
        <div class="row g-2">
            <div class="col-2"><img src={{image}} alt="photo"></div>
            <div class="col-4">
                <h3>{{name}}</h3>
                <p>{{description}}</p>
            </div>
            <div class="col-2">
                {{#with price}}
                <h4>{{title}}:</h4>
                <p class="display-6">{{value}}</p>
                {{/with}}
            </div>
            <div class="col-2"><p>{{amount}}</p></div>
            <div class="col-2">
                {{#each buttons}}
                {{#if isPrimary}}
                <button class="btn btn-primary">{{text}}</button>{{/if}}
                <br>
                {{#if isDanger}}<button class="btn btn-outline-danger">{{text}}</button>{{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{/each}}
   
